{
  "name": "abotw",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "build": "next build",
    "start": "next start",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand",
    "services:up": "docker compose -f src/infra/compose.yaml up -d",
    "services:stop": "docker compose -f src/infra/compose.yaml stop",
    "services:down": "docker compose -f src/infra/compose.yaml down",
    "services:wait:database": "ts-node ./src/infra/scripts/wait-for-postgres.ts",
    "migrations:create": "node-pg-migrate -m src/infra/migrations create",
    "migrations:up": "node-pg-migrate -m src/infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint",
    "prepare": "husky",
    "commit": "cz"
  },
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "16.4.7",
    "dotenv-expand": "12.0.1",
    "next": "15.1.6",
    "node-pg-migrate": "7.9.0",
    "pg": "8.13.1",
    "react": "19",
    "react-dom": "19"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@types/async-retry": "1.4.9",
    "@types/jest": "29.5.14",
    "@types/node": "22",
    "@types/pg": "8.11.11",
    "@types/react": "19",
    "@types/react-dom": "19",
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9",
    "eslint-config-next": "15.1.6",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-jest": "28.11.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "postcss": "^8.5.1",
    "prettier": "3.4.2",
    "tailwindcss": "4.0.0",
    "ts-node": "10.9.2",
    "typescript": "5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
